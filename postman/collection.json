{
    "info": {
        "name": "Redesigned Tribble API",
        "description": "Authentication and User Management API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "description": "Authentication endpoints",
            "item": [
                {
                    "name": "Sign Up",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "x-user-country",
                                "value": "US"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"Password123!\",\n    \"name\": \"Test User\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/v1/auth/signup",
                            "host": ["{{BASE_URL}}"],
                            "path": ["api", "v1", "auth", "signup"]
                        },
                        "description": "Register a new user"
                    },
                    "response": [
                        {
                            "name": "Successful Registration",
                            "originalRequest": {
                                "method": "POST",
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"Password123!\",\n    \"name\": \"Test User\"\n}"
                                }
                            },
                            "status": "Created",
                            "code": 201
                        }
                    ]
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"Password123!\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/v1/auth/login",
                            "host": ["{{BASE_URL}}"],
                            "path": ["api", "v1", "auth", "login"]
                        },
                        "description": "Login with email and password"
                    }
                },
                {
                    "name": "Verify OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"userId\": \"{{userId}}\",\n    \"code\": \"{{otpCode}}\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/v1/auth/verify-otp",
                            "host": ["{{BASE_URL}}"],
                            "path": ["api", "v1", "auth", "verify-otp"]
                        },
                        "description": "Verify OTP code"
                    }
                },
                {
                    "name": "Resend OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"userId\": \"{{userId}}\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/v1/auth/resend-otp",
                            "host": ["{{BASE_URL}}"],
                            "path": ["api", "v1", "auth", "resend-otp"]
                        },
                        "description": "Resend OTP code"
                    }
                }
            ]
        }
    ]
}
